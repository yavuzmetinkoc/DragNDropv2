<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

        <LinearLayout
            android:id="@+id/sayilinear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f4a460"
            android:gravity="center"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_toplam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_basarili"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/altlinear5"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#f4a460"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="150dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/altlinear4"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#f4a460"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="2dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/gray" />
                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/gray" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/gray" />





        </LinearLayout>

        <LinearLayout
            android:id="@+id/altlinear3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#f4a460"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="150dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/altlinear2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#f4a460"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="75dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/gray" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/gray" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/altlinear"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#f4a460"
            android:gravity="center"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/gray" />
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/gray" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ustlinear"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="0dp"
            android:background="#eeeee0"
            android:gravity="center"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_yukari"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/yukari" />


                <ImageView
                    android:id="@+id/iv_sag"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sag"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_sol"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sol"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_uc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/minidrone"
                    android:visibility="invisible" />

        </LinearLayout>

</LinearLayout>